<div class="my-3">
    <h1>Free Courses</h1>
    <a href="/courses/create" class="btn btn-primary">Create new Course</a>
</div>
<div class="container">
    <div class="row g-3">
        {{#each courses}}
        <div class="col-3">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none">
                        <h5 class="card-title text-truncate">{{this.name}}</h5>
                    </a>
                    <p class="card-text text-truncate">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Go to course</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>